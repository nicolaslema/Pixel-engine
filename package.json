{
  "name": "pixel-engine",
  "version": "1.0.0",
  "description": "A high-performance typed-array based pixel simulation engine.",
  "author": "TuNombre",
  "license": "MIT",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "build:packages": "npm run build -w @pixel-engine/core && npm run build -w @pixel-engine/effects",
    "build:all": "npm run build && npm run build:packages",
    "build:playground": "vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jsdom": "^28.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
