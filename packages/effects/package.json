{
  "name": "@pixel-engine/effects",
  "version": "1.0.0",
  "description": "Effects package for Pixel Engine (PixelGrid and influences).",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TuNombre/pixel-engine.git",
    "directory": "packages/effects"
  },
  "bugs": {
    "url": "https://github.com/TuNombre/pixel-engine/issues"
  },
  "homepage": "https://github.com/TuNombre/pixel-engine/tree/main/packages/effects",
  "keywords": [
    "pixel-engine",
    "canvas",
    "effects",
    "pixel-grid",
    "animation"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
