  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "dependencies": {
    "@pixel-engine/core": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "verify": "npm run build && npm run typecheck",
    "prepublishOnly": "npm run verify"
  }
